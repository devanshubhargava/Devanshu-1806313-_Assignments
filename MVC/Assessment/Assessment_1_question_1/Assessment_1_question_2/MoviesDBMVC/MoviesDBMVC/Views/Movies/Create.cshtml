@using MoviesDBMVC.Models
@model Movie

<h2>Create New Movie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.MovieName)
        @Html.TextBoxFor(m => m.MovieName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MovieName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateOfRelease)
        @Html.TextBoxFor(m => m.DateOfRelease, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.DateOfRelease, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
