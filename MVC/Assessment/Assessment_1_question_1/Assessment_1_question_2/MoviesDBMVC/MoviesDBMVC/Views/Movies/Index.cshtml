@using MoviesDBMVC.Models
@model IEnumerable<Movie>

<h2>Movies List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>Release Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.MovieName</td>
                <td>@movie.DateOfRelease.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = movie.MovieId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = movie.MovieId })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Create New Movie", "Create", null, new { @class = "btn btn-primary" })
</div>
